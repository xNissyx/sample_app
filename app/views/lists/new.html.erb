<h1>新規投稿</h1>

<%= form_with model: @list, url: "/lists", method: "post" do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  
  <h4>本文</h4>
  <%= f.text_area :body %>
  
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <!--画像ファイルだけを受け取りたいからacceptオプションで指定-->
  
  <%= f.submit "投稿" %>
<% end %>